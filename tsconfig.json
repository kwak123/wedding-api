{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "!node_modules/cypress", "src/types/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.{ts|tsx}"]
}
